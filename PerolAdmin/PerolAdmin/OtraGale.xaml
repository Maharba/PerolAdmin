<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerolAdmin.OtraGale"
            
             xmlns:sfCarousel="clr-namespace:Syncfusion.SfCarousel.XForms;assembly=Syncfusion.SfCarousel.XForms">

  <StackLayout>
    <Image x:Name="imgFoto" HeightRequest="250"></Image>
    <Label x:Name="lblImgurFoto" HorizontalOptions="Center"></Label>
    <Button x:Name="btnTomarFoto" Text="Tomar Foto"></Button>
    <sfCarousel:SfCarousel x:Name="carrusel" HeightRequest="150" WidthRequest="150"></sfCarousel:SfCarousel>
  </StackLayout>

  
</ContentPage>