<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerolAdmin.ListaUsuariosRegistrados">
  <ContentPage.ToolbarItems>

    <ToolbarItem x:Name="btnNuevo" Icon="agregar.png" Clicked="btnNuevo_Click"></ToolbarItem>
  </ContentPage.ToolbarItems>

  <ScrollView>

    <StackLayout BackgroundColor="White">
      <Label Text="Usarios Registrados" HorizontalOptions="Center" FontSize="25"></Label>
      <ActivityIndicator x:Name="lblActivityIndicator"></ActivityIndicator>
      <ListView x:Name="lsvUsuariosRegistrados" ItemSelected="lsvUsuariosRegistrados_Selected">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout>

                <Label Text="{Binding Nombre}"></Label>
              
              </StackLayout>
            </ViewCell>
          </DataTemplate>

        </ListView.ItemTemplate>
      </ListView>
  
    </StackLayout>

  </ScrollView>

</ContentPage>