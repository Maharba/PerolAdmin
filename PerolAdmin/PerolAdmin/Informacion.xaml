    <StackLayout Orientation="Vertical" HeightRequest="450">
      <Label XAlign="Center" FontSize="16" TextColor="Maroon" Text="Historia:"   >
        <Label.FontFamily>
          <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.Android >segoeuil.ttf#segoeuil.ttf#</OnPlatform.Android>
          </OnPlatform>
        </Label.FontFamily>
      </Label>
      <Label XAlign="Center" x:Name="lblHistoria" FontSize="16"  Text="{Binding Historia}"  HeightRequest="150" >
        <Label.FontFamily>
          <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.Android >segoeuil.ttf#segoeuil.ttf#</OnPlatform.Android>
          </OnPlatform>
        </Label.FontFamily>
      </Label>

      <Label XAlign="Center"  FontSize="16" TextColor="Maroon" Text="Teléfono" HorizontalTextAlignment="Center" >
        <Label.FontFamily>
          <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.Android >segoeuil.ttf#segoeuil.ttf#</OnPlatform.Android>
          </OnPlatform>
        </Label.FontFamily>
      </Label>
      <Label XAlign="Center"  x:Name="lblTelefono" FontSize="16"  Text="{Binding Telefono}" HorizontalTextAlignment="Center"  HeightRequest="50"  >
        <Label.FontFamily>
          <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.Android >segoeuil.ttf#segoeuil.ttf#</OnPlatform.Android>
          </OnPlatform>
        </Label.FontFamily>
      </Label>

      <Label XAlign="Center"  FontSize="16" TextColor="Maroon" Text="Dirección:">
        <Label.FontFamily>
          <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.Android >segoeuil.ttf#segoeuil.ttf#</OnPlatform.Android>
          </OnPlatform>
        </Label.FontFamily>
      </Label>
      <Label XAlign="Center"  x:Name="lblDireccion" FontSize="16"  Text="{Binding Direccion}"  HeightRequest="50" >
